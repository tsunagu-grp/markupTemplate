{
  "name": "markupTemplate",
  "version": "1.0.0",
  "description": "markupTemplate",
  "main": "gulpfile.babel.js",
  "author": "GEEK inc.",
  "license": "MIT",
  "scripts": {
    "start": "gulp --env development",
    "build": "gulp build --env production",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/script/**/*.js": [
      "prettier-eslint --write",
      "eslint --fix",
      "git add"
    ],
    "src/sass/**/*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "browserslist": [
    "> 1% in JP"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": false
  },
  "stylelint": {
    "extends": "@geekcojp/stylelint-config"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@geekcojp/eslint-config"
    ],
    "rules": {
      "object-curly-newline": [
        "error",
        "always"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@geekcojp/eslint-config": "^0.1.2",
    "@geekcojp/stylelint-config": "^0.2.3",
    "autoprefixer": "^9.4.7",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "del": "^4.0.0",
    "destyle.css": "^1.0.5",
    "eslint": "^5.13.0",
    "gulp": "^4.0.0",
    "gulp-changed": "^4.0.0",
    "gulp-convert": "^0.2.0",
    "gulp-csscomb": "^3.0.8",
    "gulp-cssnano": "^2.1.3",
    "gulp-eslint": "^6.0.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^5.0.3",
    "gulp-load-plugins": "^1.5.0",
    "gulp-parcel": "^0.3.5",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-reporter": "^2.10.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-stylelint": "^9.0.0",
    "gulp-webserver": "^0.9.1",
    "gutil": "^1.6.4",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "jquery": "^3.3.1",
    "lint-staged": "^8.1.3",
    "minimist": "^1.2.0",
    "path": "^0.12.7",
    "postcss": "^7.0.14",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-import": "^12.0.1",
    "postcss-reporter": "^6.0.1",
    "postcss-scss": "^2.0.0",
    "prettier": "1.17.1",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "stylelint": "^10.0.0",
    "stylelint-scss": "^3.5.3"
  }
}
